<div class="container content-wrapper buffer-both">
  <h1 class="title-medium">Править профиль</h1>

  <div class="column-1-2">
    <%= form_for(@user) do |field| %>
      <% if @user.errors.any? %>
        <div class="form-errors">
          <ul>
            <% for message in @user.errors.full_messages %>
              <li class="form-error-message"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-field">
        <%= field.label :username, class: 'form-label' %>
        <%= field.text_field :username, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= field.label 'Ваше имя', class: 'form-label' %>
        <%= field.text_field :name, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= field.label 'URL вашей аватарки', class: 'form-label' %>
        <%= field.text_field :avatar_url, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= field.label 'Цвет фона', class: 'form-label' %>
        <%= field.color_field :background_color, class: 'form-color-field' %>
      </div>

      <div class="buffer-top-large buffer-bottom">
        Если не хотите менять пароль — оставьте эти поля пустыми!
      </div>

      <div class="form-field">
        <%= field.label :password, class: 'form-label' %>
        <%= field.password_field :password, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= field.label :password_confirmation, class: 'form-label' %>
        <%= field.password_field :password_confirmation, class: 'form-text-field' %>
      </div>

      <div class="form-action buffer-top">
        <%= field.submit 'Сохранить', class: 'button button-dark button-small' %>
      </div>

      <div class="buffer-top-large buffer-bottom">
        Осторожно! Восстановление пользователя невозможно!
      </div>

      <div>
        <%= link_to 'Удалить пользователя',
                    user_path(@user),
                    method: :delete,
                    data: {confirm: 'Точно удалить? Мы будем очень-очень скучать!'},
                    class: 'button button-red' %>
      </div>
    <% end %>
  </div>
</div>
