<div class="container content-wrapper buffer-both">
  <h1 class="title-medium">Присоединяйся к нам!</h1>

  <div class="column-1-2">
    <div class="form">
      <%= form_for @user do |field| %>
        <% if @user.errors.any? %>
          <div class="form-errors">
            <ul>
              <% for message in @user.errors.full_messages %>
                <li class="form-error-message"><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-field">
          <%= field.label :username, 'Никнейм', class: 'form-label' %>
          <%= field.text_field :username, class: 'form-text-field' %>
        </div>

        <div class="form-field">
          <%= field.label :name, 'Имя', class: 'form-label' %>
          <%= field.text_field :name, class: 'form-text-field' %>
        </div>

        <div class="form-field">
          <%= field.label :email, 'Email', class: 'form-label' %>
          <%= field.text_field :email, class: 'form-text-field' %>
        </div>

        <div class="form-field">
          <%= field.label :password, 'Пароль', class: 'form-label' %>
          <%= field.password_field :password, class: 'form-text-field' %>
        </div>

        <div class="form-field">
          <%= field.label :password_confirmation, 'Пароль ещё раз', class: 'form-label' %>
          <%= field.password_field :password_confirmation, class: 'form-text-field' %>
        </div>

        <div class="form-action">
          <%= field.submit 'Зарегистрироваться', class: 'button button-small button-dark' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
